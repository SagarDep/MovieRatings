<?xml version="1.0" encoding="utf-8"?>
<merge
	xmlns:android="http://schemas.android.com/apk/res/android"
	tools:layout_width="200dp"
	tools:layout_height="270dp"
	xmlns:tools="http://schemas.android.com/tools"
	tools:cardCornerRadius="2dp"
	tools:contentPadding="24dp"
	tools:layout_margin="8dp"
	tools:parentTag="android.support.v7.widget.CardView">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<TextView
			android:id="@+id/title_view"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textAppearance="@style/Text.Dark.Medium.Larger"
			android:gravity="center"
			tools:text="Standard"/>

		<TextView
			android:id="@+id/subtitle_view"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="16dp"
			android:textAppearance="@style/Text.Dark.Large"
			tools:text="Buy this in-app package to support the app and get us a coffee."/>

		<TextView
			android:id="@+id/bought_view"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:visibility="gone"
			android:textAppearance="@style/Text.Dark.Large"
			android:layout_marginTop="8dp"
			android:layout_marginStart="6dp"
			tools:text="@string/donate_already_purchased_text"/>

		<View
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"/>

		<Button
			android:id="@+id/purchase_cta"
			style="@style/Widget.AppCompat.Button.Colored"
			android:layout_gravity="center_horizontal"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:minWidth="136dp"
			android:textSize="14sp"
			tools:text="For $0.99"/>

	</LinearLayout>

</merge>