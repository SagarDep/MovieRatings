<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:layout_width="@dimen/floating_rating_view_width"
    tools:layout_height="wrap_content"
    tools:background="@drawable/floating_rating_view_background"
    tools:parentTag="FrameLayout">

    <ImageView
        android:id="@+id/close_btn"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="4dp"
        android:padding="3dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_cancel_accent_18dp"/>

    <TextView
        android:id="@+id/rating_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textAppearance="@style/Text.Dark.Medium"
        android:layout_marginLeft="28dp"
        tools:layout_marginRight="28dp"
        android:gravity="center"
        tools:text="Flutter"
        tools:ignore="RtlHardcoded"/>

    <ImageView
        android:id="@+id/close_btn_right"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="4dp"
        android:padding="3dp"
        tools:visibility="visible"
        android:visibility="gone"
        android:layout_gravity="center_vertical|right"
        android:src="@drawable/ic_cancel_accent_18dp"
        tools:ignore="RtlHardcoded"/>

</merge>